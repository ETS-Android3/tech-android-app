<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/tickettask_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/tickettask_user"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:background="@color/lightgrey"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tickettask_date"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:background="@color/lightgrey"
                android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tickettask_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@color/gold"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tickettask_is_private"
            android:layout_height="80dp"
            android:layout_width="20dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tickettask_desc"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>